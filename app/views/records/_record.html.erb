<% if user_signed_in? && current_user.id == record.user.id %>
<div class="card">
   <%= image_tag record.image %>
  <div class="card__body">
    <%= link_to record.store_name , root_path, class: :card__title %>
    <p class="card__summary">
      ジャンル  <%= record.genre[:name] %>
    </p>
    最寄駅  <%= record.station %>
  </div>
</div>
<% end %>